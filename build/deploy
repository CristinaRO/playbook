#!/bin/bash

git checkout master && \
  git pull origin master && \
  git checkout gh-pages && \
  git merge master && \
  bundle install --path=vendor/bundle && \
  bundle exec ./compile && \
  cp playbook.html ../index.html && \
  git add ../index.html && \
  git commit -m "Deploying" && \
  git push origin gh-pages

git checkout master
